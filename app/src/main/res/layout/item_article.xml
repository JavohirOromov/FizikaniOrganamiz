<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/bg_3"
    android:layout_marginVertical="12dp"
    android:id="@+id/itemArticle"
    >


    <com.google.android.material.card.MaterialCardView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:backgroundTint="@color/black"
        android:layout_margin="4dp"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="18sp"
            android:layout_marginHorizontal="12dp"
            >

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/article_img8"
                android:scaleType="centerCrop"
                />
        </com.google.android.material.card.MaterialCardView>
    </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/article_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Nyutonning tortishish qonuni"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(1687-yil, Isaak Nyuton) â€“ Osmon jismlari harakati va mexanikaning asosiy qonunlarini tushuntirdi.wefwefwefwe"
            android:textSize="18sp"
            android:textColor="#B1ADAD"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:maxLines="3"
            android:ellipsize="end"
            />
    </LinearLayout>
</LinearLayout>